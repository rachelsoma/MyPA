<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rhardie.mypa">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainTodoActivity"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainEventActivity"
            android:label="@string/title_activity_main3"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainFriendActivity"
            android:label="@string/title_activity_main4"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddFriendActivity"
            android:label="@string/title_activity_add_friend"
            android:parentActivityName=".MainFriendActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.rhardie.mypa.MainFriendActivity" />
        </activity>
        <activity
            android:name=".AddTodoActivity"
            android:label="Add a new item"
            android:parentActivityName=".MainTodoActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.rhardie.mypa.MainTodoActivity" />
        </activity>
        <activity
            android:name=".AddEventActivity"
            android:label="@string/title_activity_add_event"
            android:parentActivityName=".MainEventActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.rhardie.mypa.MainEventActivity" />
        </activity>
        <activity
            android:name=".ViewFriendActivity"
            android:label="@string/title_activity_view_friend"
            android:parentActivityName=".MainFriendActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.rhardie.mypa.MainFriendActivity" />
        </activity>
        <activity
            android:name=".EditFriendActivity"
            android:label="@string/title_activity_edit_friend"
            android:parentActivityName=".MainFriendActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.rhardie.mypa.MainFriendActivity" />
        </activity>
    </application>

</manifest>